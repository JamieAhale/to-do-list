<%= form_with model: task, html: { class: "task-form" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "form-label" %>
    <%= f.date_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :completed, "Task complete?", class: "form-label" %>
    <%= f.check_box :completed %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category", class: "form-label" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :priority, class: "form-label" %>
    <%= f.select :priority, ['Low', 'Medium', 'High'], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :notes, class: "form-label" %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: "btn-submit" %>
  </div>
<% end %>
